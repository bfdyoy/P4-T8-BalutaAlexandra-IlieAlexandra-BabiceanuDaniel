@model ArtClubManager.Models.Membrii

@{
    ViewBag.Title = "Edit";
    if (this.User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2>Edit</h2>

@{
    int a = 1;
    if (a == 1)
    { <h2>GOGOGOGOGOGO</h2>}
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Membrii</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID_Username)

        <div class="form-group">
            @Html.LabelFor(model => model.Nume, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nume)
                @Html.ValidationMessageFor(model => model.Nume)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prenume, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Prenume)
                @Html.ValidationMessageFor(model => model.Prenume)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Parola, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Parola)
                @Html.ValidationMessageFor(model => model.Parola)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_NumeFunctie, "ID_NumeFunctie", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_NumeFunctie", String.Empty)
                @Html.ValidationMessageFor(model => model.ID_NumeFunctie)
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "../Membrii/Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
