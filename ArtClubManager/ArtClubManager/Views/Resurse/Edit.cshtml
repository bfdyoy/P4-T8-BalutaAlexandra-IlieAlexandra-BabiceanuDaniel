@model ArtClubManager.Models.Resurse

@{
    ViewBag.Title = "Edit";
    if (this.User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Resurse</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID_NumeResursa)

        <div class="form-group">
            @Html.LabelFor(model => model.ID_Locatie, "ID_Locatie", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_Locatie", String.Empty)
                @Html.ValidationMessageFor(model => model.ID_Locatie)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CostZi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CostZi)
                @Html.ValidationMessageFor(model => model.CostZi)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_Status, "ID_Status", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_Status", String.Empty)
                @Html.ValidationMessageFor(model => model.ID_Status)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
